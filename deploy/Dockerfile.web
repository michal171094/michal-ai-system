# Multi-stage build for the Node.js web/API server
FROM node:20-alpine AS base
WORKDIR /app

# Install wget for healthcheck
RUN apk add --no-cache wget

# Install dependencies in a clean environment
COPY package.json package-lock.json* ./
RUN npm ci --only=production

# Copy the application source
COPY . .

# Create required directories
RUN mkdir -p data uploads logs

# Use production environment variables by default
ENV NODE_ENV=production
ENV PORT=3000

# Expose the port for the web server
EXPOSE 3000

# Run the unified intelligent server (updated from legacy server-clean.js)
CMD ["node", "server-unified.js"]

# Container health check hitting the unified server health endpoint
HEALTHCHECK --interval=30s --timeout=5s --start-period=30s --retries=3 \
	CMD wget --no-verbose --tries=1 --spider http://localhost:3000/api/health || exit 1
